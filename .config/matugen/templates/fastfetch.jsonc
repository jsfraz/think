{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "small",
    "color": {
      "1": "{{colors.source_color.default.hex}}",
      "2": "{{colors.source_color.default.hex}}"
    },
    "padding": {
      "top": 1,
      "left": 3
    }
  },
  "display": {
    "separator": " \uf460 ",
    "constants": [
      "──────────"
    ],
    "key": {
      "type": "icon"
    },
    "color": {
      "keys": "{{colors.source_color.default.hex}}",
      "title": "{{colors.source_color.default.hex}}"
    }
  },
  "modules": [
    "title",
    {
      "type": "custom",
      "format": "{$1}"
    },
    "os",
    "kernel",
    "uptime",
    "cpu",
    {
      "type": "gpu",
      "format": "{name}"
    },
    {
      "type": "memory",
      "percent": {
        "type": 3
      }
    },
    {
      "type": "disk",
      "percent": {
        "type": 0
      }
    },
    {
      "type": "battery",
      "format": "{time-hours} hours {time-minutes} mins ({capacity}) ({status})"
    },
    "break",
    {
      "type": "colors",
      "symbol": "circle"
    }
  ]
}
